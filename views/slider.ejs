

<%- include('header') %>
<div class="col-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Slider Form </h4>
       
        <form class="forms-sample" action="/slider/sliderform" method="post" enctype="multipart/form-data" >
          <div class="form-group">
            <label for="exampleInputName1">Slider Title</label>
            <input type="text" name="title" class="form-control" id="exampleInputName1" placeholder="Title">
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Slider Description</label>
            <input type="text" name="description" class="form-control" id="exampleInputName1" placeholder="Description">
          </div>
         
          
          <div class="form-group">
            <label>Slider Image</label>
            <input type="file" name="sliderImg" class="form-control">
          </div>
   
          <input type="submit" name="submit" class="btn btn-primary mr-2" value="submit">
          <button class="btn btn-light">Cancel</button>
        </form>
      </div>
    </div>
  </div>
       
        <%- include('footer') %>